<templateSet group="mygroup">
  <template name="addMethod" value="/**&#10; * &lt;p&gt;Title: $title$&lt;/p&gt;&#10; * &lt;p&gt;$END$&lt;/p&gt;&#10; * &#10;$params$&#10; * @author wangzhe01@Koolearn-inc.com&#10; * @date $date$ $time$&#10; */" description="method annotation" toReformat="false" toShortenFQNames="true">
    <variable name="title" expression="methodName()" defaultValue="" alwaysStopAt="false" />
